@using Microsoft.AspNetCore.Identity;
@using WebApp.Models
@inject SignInManager<Users> signInManager;
@inject UserManager<Users> UserManager;	

<ul class="navbar-nav ms-auto">
	@if (signInManager.IsSignedIn(User))
	{			
		<li class="nav-item">
			<a class="nav-link textsh">@UserManager.GetUserName(User)</a>
		</li>		
		<li class="nav-item">
			<a class="nav-link text-danger text_sh2" asp-controller="Account" asp-action="Logout"><i class="fa-solid fa-arrow-right-from-bracket fa-lg"></i></a>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark text_sh4" asp-controller="Account" asp-action="Login"><i class="fa-regular fa-user fa-lg"></i></a>
		</li>
	}
</ul>